<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

 {{#each categorias}}
    <div class="card mt-4">
        <div class="cad-body">
           
            <h4>{{this.nome}}</h4>
            <small>Slug: {{this.slug}}</small></br>
            <small>Data: {{this.date}}</small></br>
            <a href="/admin/categorias/edit/{{this._id}}"><button class="btn btn-success mt-4">Editar categoria</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
            </form> 
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma categoria resgistrada</h4>
{{/each}}
